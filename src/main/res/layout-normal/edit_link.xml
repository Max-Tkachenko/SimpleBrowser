<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_child_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView6"
        android:layout_toLeftOf="@+id/textView10"
        android:layout_toRightOf="@+id/textView6"
        android:theme="@style/AppTheme"
        android:layout_toStartOf="@+id/textView10"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_child_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        android:layout_alignEnd="@+id/edit_child_name"
        android:layout_alignLeft="@+id/edit_child_name"
        android:layout_alignRight="@+id/edit_child_name"
        android:layout_alignStart="@+id/edit_child_name"
        android:layout_below="@+id/edit_child_name"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edit_child_name"
        android:layout_alignBottom="@+id/edit_child_name"
        android:layout_toEndOf="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:text="Name: "
        android:textColor="@color/colorGroupText"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="       "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edit_child_name"
        android:layout_alignBottom="@+id/edit_child_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="       "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edit_child_url"
        android:layout_alignBottom="@+id/edit_child_url"
        android:layout_toLeftOf="@+id/edit_child_url"
        android:layout_toStartOf="@+id/edit_child_url"
        android:text="URL: "
        android:textColor="@color/colorGroupText"
        android:textSize="16sp" />

</RelativeLayout>